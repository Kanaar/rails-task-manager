<div class="container">
  <h2>My Tasks</h2>
  <table class="tasklist">
    <tbody>
      <% @tasks.each do |task| %>
      <tr class="tasklist-item">
        <td class="completed-check">
          <% if task.completed %>
              <i class="far fa-check-square"></i>
            <% else %>
              <i class="far fa-square"></i>
            <% end %>
        </td>
        <td><%= link_to "#{task.title}", task %></td>
        <td><%= link_to "destroy", destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <a class="btn btn-primary" value= <%= link_to "Add new task", tasks_new_path %> ></a>
</div>
